@{
    ViewData["Title"] = "Dashboard";
    Layout = "_AdminLayout";
}

<div class="mb-4">
    <h3 class="fw-bold">Dashboard Overview</h3>
    <p class="text-secondary">Welcome back to your administration panel.</p>
</div>

<div class="row g-4 mb-4">
    <!-- Revenue -->
    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h6 class="text-muted text-uppercase mb-0 fw-bold" style="font-size: 0.75rem;">Total Revenue</h6>
                    <div class="bg-light rounded-circle p-2">
                        <i class="fas fa-dollar-sign text-success"></i>
                    </div>
                </div>
                <h3 class="fw-bold mb-0">@ViewBag.Revenue?.ToString("N0") <small class="text-muted fs-6">VND</small>
                </h3>
            </div>
        </div>
    </div>

    <!-- Orders -->
    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h6 class="text-muted text-uppercase mb-0 fw-bold" style="font-size: 0.75rem;">Total Orders</h6>
                    <div class="bg-light rounded-circle p-2">
                        <i class="fas fa-shopping-bag text-primary"></i>
                    </div>
                </div>
                <h3 class="fw-bold mb-0">@ViewBag.OrderCount</h3>
            </div>
        </div>
    </div>

    <!-- Products -->
    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h6 class="text-muted text-uppercase mb-0 fw-bold" style="font-size: 0.75rem;">Active Products</h6>
                    <div class="bg-light rounded-circle p-2">
                        <i class="fas fa-box text-warning"></i>
                    </div>
                </div>
                <h3 class="fw-bold mb-0">@ViewBag.ProductCount</h3>
            </div>
        </div>
    </div>

    <!-- Users -->
    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h6 class="text-muted text-uppercase mb-0 fw-bold" style="font-size: 0.75rem;">Customers</h6>
                    <div class="bg-light rounded-circle p-2">
                        <i class="fas fa-users text-info"></i>
                    </div>
                </div>
                <h3 class="fw-bold mb-0">@ViewBag.UserCount</h3>
            </div>
        </div>
    </div>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-header bg-white py-3 border-bottom">
        <h6 class="mb-0 fw-bold">Recent Activity</h6>
    </div>
    <div class="card-body text-center py-5 text-muted">
        <i class="fas fa-chart-bar fs-1 mb-3 opacity-25"></i>
        <p>Analytics charts will appear here once enough data is collected.</p>
    </div>
</div>
