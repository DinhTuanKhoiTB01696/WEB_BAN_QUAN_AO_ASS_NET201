@model IEnumerable<Assignment_NET201.Models.AppUser>

@{
    ViewData["Title"] = "Manage Users";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="fw-bold mb-0">Users</h3>
    <a asp-action="Index" class="btn btn-outline-dark">
        <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
    </a>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">User</th>
                        <th>Role</th>
                        <th>Phone</th>
                        <th>Address</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <div class="bg-light rounded-circle p-2 me-3 d-flex align-items-center justify-content-center"
                                        style="width: 40px; height: 40px;">
                                        <i class="fas fa-user text-secondary"></i>
                                    </div>
                                    <div>
                                        <div class="fw-bold">@item.FullName</div>
                                        <small class="text-muted">@item.Email</small>
                                    </div>
                                </div>
                            </td>
                            <td>
                                @{
                                    var roles = (ViewBag.UserRoles as Dictionary<string, IList<string>>);
                                    if (roles != null && roles.ContainsKey(item.Id))
                                    {
                                        foreach(var role in roles[item.Id])
                                        {
                                            <span class="badge bg-info text-dark">@role</span>
                                        }
                                    }
                                }
                            </td>
                            <td>@(item.PhoneNumber ?? "N/A")</td>
                            <td class="text-truncate" style="max-width: 200px;" title="@item.Address">@(item.Address ??
                            "N/A")</td>
                            <td class="text-end pe-4">
                                <a asp-action="EditUser" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form asp-action="DeleteUser" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
