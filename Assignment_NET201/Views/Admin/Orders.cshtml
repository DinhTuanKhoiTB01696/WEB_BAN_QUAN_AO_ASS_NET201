@model IEnumerable<Assignment_NET201.Models.Order>

@{
    ViewData["Title"] = "Manage Orders";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="fw-bold mb-0">Orders</h3>
    <a asp-action="Index" class="btn btn-outline-dark">
        <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
    </a>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Order ID</th>
                        <th>Customer</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th>Total</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 fw-bold">#@item.Id</td>
                            <td>
                                <div>@item.User?.FullName</div>
                                <small class="text-muted">@item.User?.Email</small>
                            </td>
                            <td>@item.OrderDate.ToString("dd MMM yyyy HH:mm")</td>
                            <td>
                                @if (item.Status == "Pending")
                                {
                                    <span class="badge bg-warning-subtle text-warning-emphasis">Pending</span>
                                }
                                else if (item.Status == "Delivered")
                                {
                                    <span class="badge bg-success-subtle text-success-emphasis">Delivered</span>
                                }
                                else if (item.Status == "Cancelled")
                                {
                                    <span class="badge bg-danger-subtle text-danger-emphasis">Cancelled</span>
                                }
                                else
                                {
                                    <span class="badge bg-light text-dark border">@item.Status</span>
                                }
                            </td>
                            <td class="fw-bold">@item.TotalAmount.ToString("N0") VND</td>
                            <td class="text-end pe-4">
                                <a asp-action="OrderDetail" asp-route-id="@item.Id" class="btn btn-sm btn-outline-dark me-2">
                                    <i class="fas fa-eye"></i> Details
                                </a>
                                <!-- Add Status Update buttons here later if needed -->
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
