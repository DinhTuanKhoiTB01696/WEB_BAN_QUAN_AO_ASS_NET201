<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ICONDENIM Admin</title>
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Anton&family=Inter:wght@300;400;500;600&display=swap"
        rel="stylesheet">
    <!-- Bootstrap & Icons -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f8f9fa;
        }

        /* Sidebar */
        .admin-sidebar {
            width: 260px;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1000;
            background-color: #fff;
            border-right: 1px solid #dee2e6;
            padding: 1.5rem 1rem;
        }

        .admin-brand {
            font-family: 'Anton', sans-serif;
            font-size: 1.5rem;
            color: #000;
            text-decoration: none;
            letter-spacing: 1px;
            display: block;
            margin-bottom: 2rem;
            text-align: center;
        }

        .nav-link {
            color: #6c757d;
            font-weight: 500;
            padding: 0.75rem 1rem;
            border-radius: 0.25rem;
            display: flex;
            align-items: center;
            transition: all 0.2s;
        }

        .nav-link:hover {
            background-color: #f1f3f5;
            color: #000;
        }

        .nav-link.active {
            background-color: #000;
            color: #fff;
        }

        .nav-link i {
            width: 24px;
            margin-right: 0.5rem;
            text-align: center;
        }

        /* Main Content */
        .admin-main {
            margin-left: 260px;
            padding: 2rem;
        }
    </style>
</head>

<body>

    <!-- Sidebar -->
    <aside class="admin-sidebar d-flex flex-column">
        <a href="/" class="admin-brand">
            ICONDENIM
            <div class="fs-6 text-muted font-monospace mt-1">ADMIN PANEL</div>
        </a>

        <ul class="nav flex-column mb-auto">
            <li class="nav-item">
                <a href="/Admin"
                    class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">
                    <i class="fas fa-chart-line"></i>
                    Dashboard
                </a>
            </li>
            <li class="nav-item">
                <a href="/Admin/Products"
                    class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Products" || ViewContext.RouteData.Values["Action"]?.ToString() == "CreateProduct" || ViewContext.RouteData.Values["Action"]?.ToString() == "EditProduct" ? "active" : "")">
                    <i class="fas fa-box"></i>
                    Products
                </a>
            </li>
            <li class="nav-item">
                <a href="/Admin/Orders"
                    class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Orders" ? "active" : "")">
                    <i class="fas fa-shopping-bag"></i>
                    Orders
                </a>
            </li>
            <li class="nav-item">
                <a href="/Admin/Users"
                    class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Users" ? "active" : "")">
                    <i class="fas fa-users"></i>
                    Users
                </a>
            </li>
        </ul>

        <div class="mt-auto border-top pt-3">
            <div class="d-flex align-items-center mb-3 px-2">
                <div class="bg-light rounded-circle p-2 me-2">
                    <i class="fas fa-user-shield text-dark"></i>
                </div>
                <div>
                    <div class="small fw-bold">@User.Identity?.Name</div>
                    <div class="text-muted" style="font-size: 0.75rem;">Administrator</div>
                </div>
            </div>
            <form class="w-100" asp-controller="Account" asp-action="Logout" method="post">
                <button type="submit" class="btn btn-outline-danger w-100 btn-sm">
                    <i class="fas fa-sign-out-alt me-2"></i>Sign Out
                </button>
            </form>
        </div>
    </aside>

    <!-- Main Content -->
    <main class="admin-main">
        <div class="container-fluid p-0">
            @RenderBody()
        </div>
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
