<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ICONDENIM</title>
    <link href="https://fonts.googleapis.com/css2?family=Anton&family=Inter:wght@300;400;500;600&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <header class="sticky-top bg-white border-bottom">
        <nav class="navbar navbar-expand-lg navbar-light py-3">
            <div class="container">
                <!-- Brand -->
                <a class="navbar-brand fw-bold text-uppercase fs-3" asp-controller="Home" asp-action="Index"
                    style="font-family: 'Anton', sans-serif; letter-spacing: 1px;">
                    ICONDENIM
                </a>

                <!-- Toggler -->
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navigation -->
                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav mx-auto mb-2 mb-lg-0 fw-medium">
                        <li class="nav-item">
                            <a class="nav-link text-uppercase px-3" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-uppercase px-3" asp-controller="Home" asp-action="Shop">Shop</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-uppercase px-3" asp-controller="Home" asp-action="Shop"
                                asp-route-categoryId="1">T-Shirts</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-uppercase px-3" asp-controller="Home" asp-action="Shop"
                                asp-route-categoryId="2">Jeans</a>
                        </li>
                    </ul>

                    <!-- Icons -->
                    <div class="d-flex align-items-center gap-3">
                        <a href="#" class="text-dark fs-5"><i class="fas fa-search"></i></a>
                        
                        @using Microsoft.AspNetCore.Identity
                        @using Assignment_NET201.Models
                        @inject SignInManager<AppUser> SignInManager
                        @inject UserManager<AppUser> UserManager

                        @if (SignInManager.IsSignedIn(User))
                        {
                            <div class="dropdown">
                                <a href="#" class="text-dark fs-5 dropdown-toggle" data-bs-toggle="dropdown">
                                    <i class="far fa-user"></i>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end rounded-0 shadow-sm border-0">
                                    <li><span class="dropdown-item-text text-muted small">Hello, @User.Identity?.Name</span></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile">My Profile</a></li>
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="MyOrders">My Orders</a></li>
                                    @if(User.IsInRole("Admin"))
                                    {
                                         <li><a class="dropdown-item fw-bold" asp-controller="Admin" asp-action="Index">Admin Dashboard</a></li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form class="form-inline" asp-controller="Account" asp-action="Logout" method="post">
                                            <button type="submit" class="dropdown-item text-danger">Logout</button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        }
                        else
                        {
                             <a asp-controller="Account" asp-action="Login" class="text-dark fs-5"><i class="far fa-user"></i></a>
                        }

                        <a href="#" class="text-dark fs-5 position-relative">
                            <i class="fas fa-shopping-bag"></i>
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-black" style="font-size: 0.6rem;">0</span>
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="bg-black text-white pt-5 pb-3 mt-5">
        <div class="container">
            <div class="row g-4">
                <div class="col-md-4">
                    <h5 class="text-uppercase fw-bold mb-3" style="font-family: 'Anton', sans-serif;">ICONDENIM</h5>
                    <p class="text-secondary small">Reimagining modern streetwear for the bold and ambitious.</p>
                </div>
                <div class="col-md-4">
                    <h6 class="text-uppercase fw-bold mb-3">Quick Links</h6>
                    <ul class="list-unstyled small text-secondary">
                        <li class="mb-2"><a href="#" class="text-decoration-none text-secondary">About Us</a></li>
                        <li class="mb-2"><a href="#" class="text-decoration-none text-secondary">Shipping & Returns</a>
                        </li>
                        <li class="mb-2"><a href="#" class="text-decoration-none text-secondary">FAQ</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h6 class="text-uppercase fw-bold mb-3">Newsletter</h6>
                    <div class="input-group mb-3">
                        <input type="text" class="form-control bg-dark border-0 text-white"
                            placeholder="Enter your email">
                        <button class="btn btn-light" type="button">Subscribe</button>
                    </div>
                </div>
            </div>
            <hr class="border-secondary my-4">
            <div class="text-center text-secondary small">
                &copy; 2026 ICONDENIM. All rights reserved.
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
